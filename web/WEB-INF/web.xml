<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ServletReporteLibrosSolicitados</servlet-name>
        <servlet-class>cr.ac.una.icai.sipreli.servlet.ServletReporteLibrosSolicitados</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletReporteEstudianteSolicitados</servlet-name>
        <servlet-class>cr.ac.una.icai.sipreli.servlet.ServletReporteEstudianteSolicitados</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletReporteLibrosSolicitados</servlet-name>
        <url-pattern>/ServletReporteLibrosSolicitados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletReporteEstudianteSolicitados</servlet-name>
        <url-pattern>/ServletReporteEstudianteSolicitados</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsf</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/applicationContext.xml
        </param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
    </listener>
</web-app>
